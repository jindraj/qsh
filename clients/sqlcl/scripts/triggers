#!/bin/bash

QUERY_CUSTOMIZATION=$2

cat <<EOF > $1
select * from (
  select user as TRIGGER_SCHEMA, TRIGGER_NAME, TRIGGERING_EVENT as EVENT_MANIPULATION,
         TABLE_OWNER as EVENT_OBJECT_SCHEMA, TABLE_NAME as EVENT_OBJECT_TABLE,
         TRIGGER_TYPE as ACTION_ORIENTATION
  from USER_TRIGGERS
  order by 1, 2
) t
$QUERY_CUSTOMIZATION;
EOF

